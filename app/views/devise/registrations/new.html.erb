<div  style="padding:0 20px;">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
<table id="billing_info" border="0" cellspacing="0" cellpadding="0"> 
	<tr> 
		<td colspan="2"><h2 style="padding-top:20px">New Customer Account</h2></td> 
	</tr> 
	<tr>
	  <td>
	    <p>
	      Please create an account with us before checking out.
	    </p>
	  </td>
	</tr>
	<tr> 
		<td colspan="2"> 
			<label for="">Email:</label> 
			<%= f.text_field :email, :class=>"text" %>
		</td> 
	</tr> 
	<tr> 
		<td colspan="2"> 
			<label for="">Password:</label> 
			<%= f.password_field :password, :class=>"text" %>
		</td> 
	</tr> 
	<tr> 
		<td colspan="2"> 
			<label for="">Confirm Password:</label> 
			<%= f.password_field :password_confirmation, :class=>"text" %>
		</td> 
	</tr>

	<tr> 
		<td colspan="2"> 
			<label for="">First Name:</label> 
			<%= f.text_field :first_name, :class=>"text" %>
		</td> 
	</tr> 

	<tr> 
		<td colspan="2"> 
			<label for="">Last Name:</label> 
			<%= f.text_field :last_name, :class=>"text" %>
		</td> 
	</tr> 
		
	<tr> 
		<td colspan="2"> 
			<label for="">Address:</label> 
			<%= f.text_field :address, :class=>"text" %>
		</td> 
	</tr> 

	<tr> 
		<td colspan="2"> 
			<label for="">City:</label> 
			<%= f.text_field :city, :class=>"text" %>
		</td> 
	</tr> 

	<tr> 
		<td colspan="2"> 
			<label for="">State:</label> 			
		    <%= f.select(:state_id, options_for_select(State.all.map {|state| [state.name, state.id]}, @user.state_id), {:prompt=>"Choose a State"}, :class=>"text") %>
		</td> 
	</tr> 

	<tr> 
		<td colspan="2"> 
			<label for="">Zip:</label> 
			<%= f.text_field :zip, :class=>"text" %>
		</td> 
	</tr> 
				
	<tr> 
		<td colspan="2"> 
			<%= f.submit "Sign up" %>
		</td> 
	</tr>	
</table>

<% end %>

<%= render :partial => "devise/shared/links" %>
</div>
