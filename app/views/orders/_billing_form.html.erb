	<tr> 
		<td colspan="2"><h2 style="padding-top:20px">Billing Information</h2></td> 
	</tr> 
	<tr> 
		<td> 
			<label for="name">First Name:</label> 
			<%=f.text_field :first_name, :class=>"text", :value=>(params[:first_name]? params[:first_name] : current_user.first_name)%>
		</td> 
	</tr> 

	<tr>
		<td> 
			<label for="name">Last Name:</label> 
			<%=f.text_field :last_name, :class=>"text", :value=>(params[:last_name]? params[:last_name] : current_user.last_name)%>
		</td>
	</tr>	

	
	<tr> 
		<td> 
			<label for="first_name">Address:</label> 
			<%=f.text_field :address, :class=>"text", :value=>(params[:address]? params[:address] : current_user.address) %>
		</td> 
	
	</tr> 
	<tr> 
		<td> 
			<label for="first_name">City:</label> 
			<%=f.text_field :city, :class=>"text", :value=>(params[:city]? params[:city] : current_user.city)%>
		</td> 
		<td> 
			<label for="first_name">State:</label> 
			<%= f.select(:state_id, options_for_select(State.all.map {|state| [state.name, state.id]}, ( (params[:state_id].present?) ? params[:state_id] :  (current_user.state_id if current_user.state_id?) )) , {:prompt=>"Choose a State"}) %>
			
		</td> 


		<tr> 
			<td> 
				<label for="first_name">Zip:</label> 
				<%=f.text_field :zip, :class=>"text", :value=>(params[:zip]? params[:zip] : current_user.zip)%>
			</td> 
			
		</tr> 
		<tr> 
			<td> 
				<label for="email">Email:</label> 
				<%=f.text_field :email, :class=>"text", :value=>(params[:email]? params[:email] : current_user.email)%>
			</td> 
			
		</tr> 
		<tr> 
			<td> 
				<label for="phone">Phone:</label> 
				<%=f.text_field :phone, :class=>"text", :value=>(params[:phone]? params[:phone] : current_user.phone)%>
			</td> 
			
		</tr> 		
	</tr> 
