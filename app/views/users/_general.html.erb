<div id="large_table" >
	<div id="header_bg" >
		<div id="tabs">
			<ul>
				<li><a href="#tabs-1">User Info</a></li>
				<li><a href="#tabs-2">Course List</a></li>
				<li><a href="#tabs-4">Upload Files</a></li>
				<li><a href="#tabs-3">Edit Info</a></li>
			</ul>
			<div id="tabs-1">
	  		  <div class="user_info" style="margin-left:15px;margin-top:15px;">
	  		    <h1>General Information</h1>
	  		    <p style="margin-left:15px;"><strong>Name:</strong> <%=@user.name%></p>
	  		    <p style="margin-left:15px;"><strong>Address:</strong> <%=@user.address%></p>
			 	<p style="margin-left:15px;"><strong>City:</strong> <%=@user.city%></p>
				<p style="margin-left:15px;"><strong>State:</strong> <%=@user.state.name %></p>
				<p style="margin-left:15px;"><strong>Phone:</strong> <%=@user.phone%></p>
		  		<p style="margin-left:15px;"><strong>Email:</strong> <a href="mailto:<%=@user.email%>"><%=@user.email%></a></p>
	  		  </div>
			</div> <!-- end tabs 1-->

			<div id="tabs-2">
	  		  <div class="user_info" style="margin-left:15px;margin-top:15px;">
	  		    <h1>Course List</h1>
	  		    <p style="margin-left:15px;"><%=@user.name%> has regsitered for the following courses:</p>
	  		    <% @user.course_registrants.each do |course| %>
	  		      <p style="margin-left:15px;">
	  		        <%=link_to course.course.title, course_path(course.course.id) %>
	  		        &nbsp;
	  		        <%=CourseDate.where(:id=>course.course_date_id).first.start_date.strftime('%a %b %d, %Y').to_s %>
                    -
	  		        <%=CourseDate.where(:id=>course.course_date_id).first.end_date.strftime('%a %b %d, %Y').to_s %>

	  		      </p>
	  		    <% end %>
	  		    
	  		  </div>
			</div> <!-- end tabs 1-->

			<div id="tabs-4">
	  		  <div class="user_info" style="margin-left:15px;margin-top:15px;">
	  		    <h1>Upload Files</h1>
	  		    <%= render :partial=>"media" %>
	  		    <%= render :partial=>"admin/user_assets/show" %>

	  		  </div>
			</div> <!-- end tabs 1-->
						
			<div id="tabs-3">
	  		  <div class="user_info" style="margin-left:15px;margin-top:15px;">
	  		    <h1>Edit Info</h1>
	  		    <%= form_for(@user) do |f| %>
  	  		      <%= render :partial=>"form", :locals=>{:f=>f} %>
  	  		    <% end %>
	  		  </div>
			</div> <!-- end tabs 1-->
				
		</div><!-- end tabs-->
	
	</div><!-- end header bg-->
	<div class="footer"></div>
</div><!-- end large table-->
	
	