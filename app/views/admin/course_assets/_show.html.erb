<div class="user-asset-box" style="margin-left:15px;margin-top:15px"> 
  <h2 style="width:95%">Current Files</h2>
  <%= "<p>There are no files</p>".html_safe if CourseAsset.where(:course_id=>@course.id).blank? %>
  <% CourseAsset.where(:course_id=>@course.id).each do |course_asset| %>
    <div id="course_asset_<%= course_asset.id %>" style="clear:both">
      <p>  
        <%= link_to course_asset.title, course_asset.asset.url %>
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <%= link_to image_tag("delete_btn.png", :style=>"width:16px;height:16px;"), admin_course_asset_path(course_asset), :confirm => 'Are you sure you want to delete this item?', :method => :delete, :remote=>true %>     
      </p>
    </div>
  <% end %>

</div>
