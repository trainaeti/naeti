<div class="user-asset-box" style="margin-left:15px;margin-top:15px"> 
  <h2 style="width:95%">Current Files</h2>
  <%= "<p>There are no files</p>".html_safe if UserAsset.where(:user_id=>@user.id).blank? %>
  <% UserAsset.where(:user_id=>@user.id).each do |user_asset| %>
    <div id="user_asset_<%= user_asset.id %>" style="clear:both">
      <p>  
        <%= link_to user_asset.title, user_asset.asset.url %>
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <%= link_to image_tag("delete_btn.png", :style=>"width:16px;height:16px;"), admin_user_asset_path(user_asset), :confirm => 'Are you sure you want to delete this item?', :method => :delete, :remote=>true %>     
      </p>
    </div>
  <% end %>

</div>
