<div id="asset_box">
<h1>Showing Images</h1>

<table style="width:100%">
  <tr style="background-color:#ECFBA1;">
    <th style="padding:3px; width:80%">URL</th>
    <th style="padding:3px; width:20%">Delete</th>
  </tr>

<% @assets.each do |asset| %>
  <tr>
    <td style="padding:3px; width:80%"><%= link_to ("http://#{request.host}#{asset.asset.url}", "http://#{request.host}#{asset.asset.url}", :target=>"_blank") %></td>
    <td style="padding:3px; width:20%"><%= link_to 'Delete', admin_asset_path(asset), :confirm => 'Are you sure you want to delete this?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= "<h3>There are no images at this time.</h3>".html_safe if @assets.blank? %>

<%=will_paginate @assets%>

<br />

<%= link_to 'Add Image', new_admin_asset_path %>
</div>
